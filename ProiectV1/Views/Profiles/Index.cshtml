

@if(ViewBag.Message != null){
    <h2 class="alert-success p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
}

@foreach (var profile in ViewBag.Profiles.Keys){
    
    <div class="card m-2">
        <div class="card-header">
            <strong><i class="bi bi-person"></i>@profile.UserName</strong>
        </div>

        <div class="card-body">
             @foreach (var rol in ViewBag.Profiles[profile]){
                <p>@rol</p>;
             }
        </div>
        <div class="card-footer">
            <a class="btn btn-success" style="width:auto;" href="/Profiles/EditRoll/@profile.Id">Modifica Rol</a>
        </div>
    </div>

}
