@model ProiectV1.Models.Product


<h2 class="text-center mt-5">Editare produs</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">
            
             <form enctype="multipart/form-data" asp-controller="Products" aspaction="Edit/@Model.Id">
                @Html.Label("Title", "Titlu Produsului")
                <br />
                @Html.EditorFor(m => m.Title, new { htmlAttributes = new { @class = "form-control" } })
                <br /><br />
                @Html.Label("Description", "Descrierea Produsului")
                <br />
                @Html.Editor("Description", new { htmlAttributes = new { @class = "form-control" } })
                <br /><br />
                
                @Html.Label("Price", "Pretul Produsului")
                <br />
                @Html.Editor("Price", new { htmlAttributes = new { @class = "form-control" } })
                <br /><br />



                <p>Img Produs</p>
                <input class="form-control" type="file" name="ProductPhoto" />
                <br /><br />

                <label>Selectati categoria</label>
                @Html.DropDownListFor(m => m.CategoryId,
                new SelectList(Model.Categ, "Value", "Text"),
                "Selectati categoria", new { @class = "form-control" })
                <br />
                <button class="btn btn-sm btn-success" type="submit">Modifica produs</button>

            </form>
        </div>
    </div>
</div>