@model ProiectV1.Models.Product
@Html.ValidationSummary(false, "", new { @class = "textdanger" })

@if(ViewBag.Message != null){
    <h2 class="alert-success p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
}

<h2 class="text-center mt-5">Adaugare articol</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">
            <form enctype="multipart/form-data" asp-controller="Products" aspaction="New">

                @Html.Label("Title", "Denumire Produs")
                <br />
                @Html.TextBox("Title", null, new { @class = "form-control" })
                @Html.ValidationMessage("Title", null, new { @class = "text-danger" })
                <br /><br />

                @Html.Label("Description", "Descriere produs")
                <br />
                @Html.TextArea("Description", null, new { @class = "form-control" })
                @Html.ValidationMessage("Description", null, new { @class = "text-danger" })
                <br /><br />

                @Html.Label("Price", "Pret produs")
                <br />
                @Html.TextArea("Price", null, new { @class = "form-control" })
                @Html.ValidationMessage("Price", null, new { @class = "text-danger" })
                <br /><br />


                <p>Img Produs</p>
                <input class="form-control" type="file" name="ProductPhoto" />
                <br /><br />




                <label>Selectati categoria</label>
                @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categ, "Value", "Text"),
                "Selectati categoria", new { @class = "form-control" })
                @Html.ValidationMessage("CategoryId", null, new { @class = "text-danger" })
                <br />

                <button class="btn btn-success" type="submit">Adauga articol</button>

            </form>
        </div>
    </div>
</div>
