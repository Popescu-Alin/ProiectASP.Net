@model ProiectV1.Models.Order
@Html.ValidationSummary(false, "", new { @class = "textdanger" })

@{
    ViewBag.Title = "Adaugare Categorie";
}


<h2>Adaugare Categorie</h2>

<form method="post" action="/Orders/New">

    <input type="hidden" name="UserId" value="@Model.UserId" />

    @Html.Label("Address", "Adresa la care doriti sa fie livrata comnda")
    <br />

    @Html.TextBox("Address", null, new { @class = "form-control" })
    @Html.ValidationMessage("Address", null, new { @class = "text-danger" })
    <br /><br />

    <button class="btn btn-success" type="submit">Plaseaza Comanda</button>

</form>
